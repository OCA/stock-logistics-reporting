<odoo>
    <record id="stock_kardex_report_tree_view" model="ir.ui.view">
        <field name="name">stock.kardex.report.tree</field>
        <field name="model">stock.kardex.report</field>
        <field name="arch" type="xml">
            <tree string="Stock Kardex Report" default_order='date'>
                <field name="date"/>
                <field name="origin"/>
                <field name="product_id"/>
                <field name="product_uom_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="lot_id" optional="show"/>
                <field name="owner_id" optional="show"/>
                <field name="package_id" optional="show"/>
                <field name="qty_done"/>
                <field name="balance"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>
</odoo>
