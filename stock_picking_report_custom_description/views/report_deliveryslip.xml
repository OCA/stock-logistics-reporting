<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document_description" inherit_id="stock.report_delivery_document" primary="True">
        <xpath expr="//table[@t-if='not o.pack_operation_ids']" position="attributes">
            <attribute name="t-if"></attribute>
        </xpath>
        <xpath expr="//table[@t-if='o.pack_operation_ids']" position="replace">
        </xpath>
        <xpath expr="//tr/td/span[@t-field='move.product_id']" position="attributes">
            <attribute name="t-field">move.name</attribute>
        </xpath>
    </template>

    <template id="report_deliveryslip_description">
        <t t-foreach="docs" t-as="o">
            <t t-call="stock_picking_report_custom_description.report_delivery_document_description"
               t-lang="o.partner_id.lang"/>
        </t>
    </template>

</odoo>
