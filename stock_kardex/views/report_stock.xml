<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="footnotes_template">
    <t t-foreach="footnotes" t-as="footnote">
        <p class="footnote" t-att-id="'footnote' + str(footnote.get('number'))" t-att-data-id="footnote.get('id')">
            <span class='text'><t t-esc="str(footnote.get('number')) + '. ' + str(footnote.get('text'))"/></span>
            <span class='o_stock_reports_footnote_icons'><i class="fa fa-fw fa-trash-o"></i></span>
        </p>
    </t>
</template>

<template id="line_caret_options">
    <li t-if="line['caret_options'] == 'stock.move.line'" role="presentation"><a role="menuitem" tabindex="-1" t-att-data-id="line['id']" action="open_stock_move_line">View Move Line</a></li>
    <li t-if="line['caret_options'] == 'stock.move.line'" role="presentation"><a role="menuitem" tabindex="-1" t-att-data-name="line['name']" action="open_stock_picking">View Stock Picking</a></li>
</template>

<template id="line_template">
    <t t-foreach="lines['lines']" t-as="line">
        <t t-set="trclass" t-value="''"/>
        <t t-set="domainClass" t-value="'o_stock_reports_domain_line_2'"/>
        <t t-if="not line.get('caret_options')">
            <t t-set="trclass" t-value="'o_stock_reports_default_style'"/>
            <t t-if="line.get('level') != None">
                <t t-set="trclass" t-value="'o_stock_reports_level'+str(line['level'])"/>
            </t>
        </t>
        <t t-if="line.get('caret_options')">
            <t t-if="line.get('level')">
                <t t-set="domainClass" t-value="'o_stock_reports_domain_line_'+str(line['level'])"/>
            </t>
        </t>

        <tr t-att-class="trclass+' '+(line.get('class', ''))" t-att-data-parent-id="line.get('parent_id', False)" t-att-style="line.get('style', '')">
            <td t-att-data-id="line['id']" t-att-class="'o_stock_report_line ' + (line.get('unfoldable') and 'js_stock_report_foldable' or '')" t-att-data-unfolded="line.get('unfolded', False)" t-att-colspan="line.get('colspan', '1')">
                    <t t-if="line.get('unfoldable')">
                        <span t-att-data-id="line['id']" class="o_stock_reports_caret_icon"><i t-att-class="'fa fa-fw ' + (line.get('unfolded') and 'fa-caret-down' or 'fa-caret-right')"></i></span>
                    </t>
                    <t t-if="not line.get('caret_options')">
                            <span class="stock_report_line_name">
                                <a t-if="line.get('action_id')" t-att-data-id="line['id']" t-att-data-action-id="line['action_id']" t-att-action="line.get('action', 'execute_action')">
                                    <t t-esc="line.get('name')"/>
                                </a>
                                <t t-if="not line.get('action_id')" t-esc="line.get('name')"/>
                                <span class="js_stock_report_line_footnote" t-att-data-id="line['id']">
                                    <sup t-if="line.get('footnote')"><b class="o_stock_reports_footnote_sup"><a t-att-href="'#footnote'+line['footnote']"></a><t t-esc="line['footnote']"/></b></sup>
                                </span>
                            </span>
                    </t>
                    <t t-if="line.get('caret_options')">
                        <div class="dropdown">
                            <a data-toggle="dropdown" href='#'>
                                <span t-att-data-id="line['id']" t-att-class="domainClass">
                                    <t t-esc="line.get('name')"/>
                                </span>
                                <span class="caret"></span>
                            </a>
                            <span class="js_stock_report_line_footnote" t-att-data-id="line['id']"><sup t-if="line.get('footnote')"><b class="o_stock_reports_footnote_sup"><a t-att-href="'#footnote'+line['footnote']"></a><t t-esc="line['footnote']"/></b></sup></span>
                            <ul class="dropdown-menu o_stock_reports_domain_dropdown" role="menu">
                                <t t-call="stock_kardex.line_caret_options"/>
                            </ul>
                        </div>
                    </t>
            </td>
            <t t-foreach="line.get('columns')" t-as="column">
                <td t-att-class="'o_stock_report_line ' + (column.get('class', lines.get('columns_header')[column_index+line.get('colspan', 1)].get('class', '')))" t-att-style="column.get('style', lines.get('columns_header')[column_index+line.get('colspan', 1)].get('style', ''))">
                    <span class="o_stock_report_column_value">
                        <t t-raw="column.get('name')"/>
                    </span>
                </td>
            </t>
        </tr>
    </t>
</template>

<template id="main_template">
    <div class='o_stock_reports_body'>
        <div class="container o_stock_reports_page o_stock_reports_no_print">
            <h2><t t-esc="report.get('name')"></t></h2>
            <div class="table-responsive">
                <table width="100%" class="o_stock_reports_table">
                    <thead>
                        <tr>
                            <t t-foreach="lines.get('columns_header')" t-as="column_header">
                                <th t-att-class="'o_stock_report_column_header ' + (column_header.get('class', ''))" t-att-style="column_header.get('style', '')">
                                    <t t-raw="column_header.get('name')"/>
                                </th>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="lines.get('lines')">
                                <t t-call="stock_kardex.line_template" />
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="js_stock_report_footnotes"/>
        </div>
    </div>
</template>

<!-- stylesheets -->
<template id="assets_kardex_report">
    <link rel="stylesheet" href="/web/static/src/less/import_bootstrap.less"/>
    <link rel="stylesheet" href="/web/static/src/less/fonts.less"/>
    <link rel="stylesheet" href="/web/static/src/less/variables.less"/>
    <link rel="stylesheet" href="/web/static/src/less/utils.less"/>
    <link rel="stylesheet" href="/stock_kardex/static/src/less/stock_kardex_report.less" />
    <link rel="stylesheet" href="/stock_kardex/static/src/less/stock_report_print.less" />
</template>

<!-- This template is only used when printing a financial report to a PDF output -->
<template id="print_template">
    <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
    <html>
        <head>
            <meta http-equiv="content-type" content="text/html; charset=utf-8" />
            <t t-call-assets="stock_kardex.assets_kardex_report" t-js="False"/>
        </head>
        <body class="o_stock_reports_body_print">
        </body>
    </html>
</template>
</data>
</odoo>
