<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_picking_valued"
      inherit_id="stock.report_picking">
      <xpath expr="//table[contains(@class, 'table table-condensed')]/thead/tr/t[contains(@t-if, 'outgoing')]" position="after">
        <t t-if="o.partner_id.stock_valued">
            <th><strong>Price</strong></th>
            <th><strong>Discount</strong></th>
            <th><strong>Subtotal</strong></th>
        </t>
      </xpath>
      <xpath expr="//table[contains(@class, 'table table-condensed')]/tbody/tr[contains(@t-foreach, 'o.move_lines')]/t[contains(@t-if, 'outgoing')]" position="after">
        <t t-if="o.partner_id.stock_valued">
            <td><span t-field="move.sale_price_unit"/></td>
            <td><span t-field="move.sale_discount"/></td>
            <td><span t-field="move.sale_price_subtotal"/></td>
        </t>
      </xpath>
      <xpath expr="//div[contains(@class, 'page')]/table[2]" position="after">
        <table class="table table-condensed">
            <tbody>
                <tr>
                    <td class="text-right">
                        Untaxed Amount: <span t-field="o.amount_untaxed"/>
                    </td>
                    <td class="text-right">
                        Taxes: <span t-field="o.amount_tax"/>
                    </td>
                    <td class="text-right">
                        Total: <span t-field="o.amount_total"/>
                    </td>
                </tr>
            </tbody>
        </table>
      </xpath>
    </template>
  </data>
</openerp>